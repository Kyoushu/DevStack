{% extends 'AccordDevStackBundle:Default:base.html.twig' %}

{% block meta_title %}DevStack - Confirm Action{% endblock %}

{% block contents %}

	<div class="container">
		<h2>{{ title }}</h2>
		<hr />
		
		<div class="row">
			<div class="col-md-12">
				<p>{{ message }}</p>
			</div>
		</div>
		
		<div class="row">
			<div class="col-md-12">
				<p>
					<a class="btn btn-danger" href="{{ confirmUrl }}">Confirm</a>
					or
					<a class="btn btn-default" href="{{ cancelUrl }}">Cancel</a>
				</p>
			</div>
		</div>
		
	</div>

{% endblock %}